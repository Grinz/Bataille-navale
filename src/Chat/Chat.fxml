<AnchorPane prefHeight="350.0" prefWidth="250.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Chat.ChatController">
   <children>
       <ScrollPane fx:id="messagesScrollPane" layoutX="12.0" layoutY="12.0" prefHeight="275.0" prefWidth="227.0">
           <content>
               <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0" />
           </content>
       </ScrollPane>

      <TextField fx:id="messageTextField" layoutX="12.0" layoutY="300.0" prefHeight="40" prefWidth="150" promptText="Message..." />
       <Button fx:id="sendMessageButton" layoutX="170.0" layoutY="300.0" mnemonicParsing="false" onAction="#handleSendMessageButtonAction" prefHeight="40.0" prefWidth="70.0" text="Envoyer" />
   </children>
</AnchorPane>
